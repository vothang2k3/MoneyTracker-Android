<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Khai báo permission ở đây -->

    <!-- Tag application: Cấu hình toàn bộ ứng dụng -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyTracker">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">

            <!-- Intent filter: Đánh dấu đây là Activity khởi động đầu tiên -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

            <!-- Khai báo thêm Activity, Service, Receiver khác ở đây -->

    </application>

</manifest>